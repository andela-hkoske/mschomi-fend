md-content(layout='column' layout-align='center center')
	p.md-display-3(style='padding-bottom: 0; margin-bottom: 0') Welcome to Mschomi.
	b.md-headline Join our community by signing up below. Pick a profile.
	md-content(layout='row' style="width: 1500px")
		md-card(flex layout='column' layout-align="center center" style='margin: 50px; padding: 0')
			form
				div(layout='column' layout-align="center center")
					p.md-display-1 Student
					img(src='../images/student.png' style='height: 250px; width: 250px')
					div(layout='row')
						md-input-container(flex)
							label First Name
							input
						md-input-container(flex)
							label Last Name
							input
					div(layout='row')
						md-input-container(flex)
							label Username
							input
						md-input-container(flex)
							label Password
							input(type='password')
					div(layout='row' data-ng-init="levels=['Primary', 'Secondary', 'Tertiary']")
						md-input-container
							label Education Level
							md-select(ng-model="level" style="width: 170px")
								md-option(ng-repeat="x in levels") {{x}}
						md-input-container
							label School
							input(style="width: 280px")
					div(layout='row')
						md-input-container
							label Profile Status
							input(style="width: 280px")
						md-datepicker(ng-model="user.submissionDate" md-placeholder="Date of Birth" style='padding-top: 15px')
					md-input-container(style="width: 480px")
						label Message Title
						input
					md-input-container.md-block
						label Message to Sponsors
						textarea(columns="1" md-maxlength="150" rows="5" ng-model="user.msg" style="width: 480px")
				md-button(class="md-raised md-primary md-padding md-margin") Sign Up as a Student
		md-card(flex layout='column' layout-align="center center" style='margin: 50px; padding: 0')
			form
				div(layout='column' layout-align="center center")
					p.md-display-1 Sponsor
					img(src='../images/sponsor.png' style='height: 250px; width: 250px')
					div(layout='row')
						md-input-container(flex)
							label First Name
							input
						md-input-container(flex)
							label Last Name
							input
					div(layout='row')
						md-input-container(flex)
							label Username
							input
						md-input-container(flex)
							label Password
							input(type='password')
					div(layout='row')
						md-input-container(flex)
							label Profession
							input(style="width: 280px")
						md-input-container(flex)
							label Gender
							md-select(ng-model='user.gender' style="width: 170px")
								md-option(ng-repeat="x in ['Female', 'Male', 'Other']") {{x}}
					div(layout='row')
						md-input-container
							label Profile Status
							input(style="width: 280px")
						md-datepicker(ng-model="user.submissionDate" md-placeholder="Date of Birth" style='padding-top: 15px')
					md-input-container(style="width: 480px")
						label Message Title
						input
					md-input-container.md-block
						label Message to Viewers
						textarea(columns="1" md-maxlength="150" rows="5" ng-model="user.msg" style="width: 480px")
				md-button(class="md-raised md-primary md-margin md-padding") Sign Up as a Sponsor


